{
    "action": {
        "default_popup": "popup.html"
    },
    "author": "Giacomo Garaccione",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": [
                "scripts/utilityFunctions.js",
                "scripts/eventListeners.js",
                "lib/jszip.js",
                "lib/FileSaver.js"
            ]
        }
    ],
    "description": "A plugin that enhances app testing with gamification strategies",
    "host_permissions": [
        "<all_urls>"
    ],
    "manifest_version": 3,
    "name": "Gamification Plugin",
    "permissions": [ 
        "tabs",
        "storage",
        "activeTab", 
        "scripting",
        "downloads",
        "background",
        "notifications",
        "<all_urls>",
        "desktopCapture"
    ],
    "version": "0.7",
    "web_accessible_resources": [{
        "resources": ["img/*"], 
        "matches": ["<all_urls>"]
    }]
}